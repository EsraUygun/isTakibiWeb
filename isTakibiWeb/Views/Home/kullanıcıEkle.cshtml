@model isTakibiWeb.Models.TBLKULLANICI
@{
    ViewBag.Title = "kullanıcıEkle";
    Layout = "~/Views/Shared/MyLayout.cshtml";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">

        <div class="form-group">
            <div class="col-md-6">
                @Html.EditorFor(model => model.KULLANICI_ADI, new { htmlAttributes = new { @class = "form-control", @placeholder = "Kullanıcı Adı" } })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-6">
                @Html.EditorFor(model => model.SIFRE, new { htmlAttributes = new { @class = "form-control", @placeholder = "Şifre" } })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-6">
                @Html.EditorFor(model => model.E_POSTA, new { htmlAttributes = new { @class = "form-control", @placeholder = "EPOSTA" } })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-6">
                @Html.EditorFor(model => model.PERSONEL_KOD, new { htmlAttributes = new { @class = "form-control", @placeholder = "Personel kodu" } })
            </div>
        </div>

        
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Oluştur" class="btn btn-default" />
            </div>
        </div>
        @if (ViewBag.Message != null)
        {
            <script type="text/javascript">
                window.onload = function () {
                    alert("@ViewBag.Message");
                };
            </script>
        }

    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
