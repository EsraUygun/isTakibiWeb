                url: '/Home/GetJsonTest' + ID,
                type: 'POST',
                dataType: 'json',
                success: function (data) {
                    $("#PERSONEL_ADI").html(data.PERSONEL_ADI);
           
                }
            });
    });
</script>


<script type="text/javascript">
    $(document).ready(function () {
        $("#personelkod").on("change", function () {
            var val = document.getElementById("personelkod").value;
           $.ajax({
                url : '/Home/Test/' + val,
                type:'POST',
                dataType:'json',
                success:function(data){
                    $("#PersonelAdı").html(data.Ad);
                    $("#OgrenciSoyAdi").html(data.SoyAd);
                    $("#OgrenciNumarasi").html(data.OgrenciNo);
                    $("#OgrenciSubesi").html(data.Sube);
                    $("#OgrenciSinifi").html(data.Sinif);
                },
                error: function (hata, ajaxOptions, thrownError) {
                    alert(hata.status);
                    alert(thrownError);
                    alert(hata.responseText);
                }
            });
        });
    });

</script>
