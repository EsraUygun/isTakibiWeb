@model IEnumerable<isTakibiWeb.Models.TBLPROJE>

@{
    ViewBag.Title = "projeGörüntüle";
    Layout = "~/Views/Shared/MyLayout.cshtml";
}



<div class="container-fluid">
    <!-- Breadcrumbs-->
    <ol class="breadcrumb">
        <li class="breadcrumb-item">
            <a href="#">Dashboard</a>
        </li>
        <li class="breadcrumb-item active">Tables</li>
    </ol>
    <div class="card mb-3">
        <div class="card-header">
            <i class="fa fa-table"></i> personel tablosu
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">

                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.PROJE_KOD)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.REC_VERSION)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.PROJE_ADI)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.PROJE_TANIMI)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.PROJE_TURU)
                            </th>

                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                               <td>
                                   @Html.DisplayFor(modelitem => item.PROJE_KOD)
                               </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.REC_VERSION)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.PROJE_ADI)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.PROJE_TANIMI)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.PROJE_TURU)
                                </td>

                                <td>

                                    @Html.ActionLink("Düzenle", "ProjeDüzenle","Proje", new { id = item.REC_ID })
                                    <br />
                                    @using (Html.BeginForm("ProjeDetay", "Proje", new { id = item.REC_ID }))
                                    {
                                        <input type="submit" value="Detay" />
                                    }
                                    <br />
                                    <form action="~/Proje/ProjeSil" method="get">
                                        <input type="hidden" id="id" value=item.PROJE_KOD />
                                        <input type="submit" value=" Sil" />
                                    </form>
                               
                                    @*@Html.ActionLink("Sil", "ProjeSil", "Proje", new { id = item.PROJE_KOD }, null)*@
                                </td>
                            </tr>
                        }
                    </tbody>

                </table>

            </div>
        </div>
    </div>
</div>
<a class="scroll-to-top rounded" href="#page-top">
    <i class="fa fa-angle-up"></i>
</a>
