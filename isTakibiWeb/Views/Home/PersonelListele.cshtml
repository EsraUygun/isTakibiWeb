<div class="container-fluid">
    <!-- Breadcrumbs-->
    <ol class="breadcrumb">
        <li class="breadcrumb-item">
            <a href="#">Dashboard</a>
        </li>
        <li class="breadcrumb-item active">Tables</li>
    </ol>
    <div class="card mb-3">
        <div class="card-header">
            <i class="fa fa-table"></i> personel tablosu
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>

                            <th>
                                @Html.DisplayNameFor(model => model.PERSONEL_KOD)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.PERSONEL_ADI)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.PERSONEL_SOYADI)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.TEL_NO)
                            </th>
                            

                            <th></th>
                        </tr>
                    </thead>
                    <tfoot>

                        <tr>

                            <th>
                                @Html.DisplayNameFor(model => model.PERSONEL_KOD)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.PERSONEL_ADI)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.PERSONEL_SOYADI)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.TEL_NO)
                            </th>
                            

                            <th></th>
                        </tr>

                    </tfoot>
                    <tbody>

                        @foreach (var item in Model)
                        {
                        <tr>

                            <td>
                                @Html.DisplayFor(modelItem => item.PERSONEL_KOD)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.PERSONEL_ADI)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.PERSONEL_SOYADI)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.TEL_NO)
                            </td>


                            <td>
                                @Html.ActionLink("Düzenle", "personelDüzenle",new {id= item.PERSONEL_KOD } ) |
                                @Html.ActionLink("Ayrıntılar", "personelDetails","Home", new { id = item.REC_ID }) |
                                @Html.ActionLink("Sil", "personelSil", new { id = item.PERSONEL_KOD })
                            </td>
                        </tr>
                        }
                    </tbody>

                </table>

            </div>
        </div>
    </div>
</div>

<a class="scroll-to-top rounded" href="#page-top">
    <i class="fa fa-angle-up"></i>
</a>


