@model isTakibiWeb.Models.TBLPROJEPERSONEL

@{
    ViewBag.Title = "ProjePersonel";
    ViewBag.Title = "projeEkle";
    Layout = "~/Views/Shared/MyLayout.cshtml";
}

<h2> Projeye Personel Ekle </h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">

        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })


        <div class="form-group">
            <div class="col-md-6">
                @Html.DropDownList("PERSONEL_KOD", null, htmlAttributes: new { @class = "form-control select-add-placeholder1" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-6">
                @Html.DropDownList("PROJE_KOD", null, htmlAttributes: new { @class = "form-control select-add-placeholder2" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-6">
                @Html.TextAreaFor(model => model.GOREV_TANIMI, 7,50,new { @placeholder="Görev Açıklamsı", htmlAttributes = new { @class = "form-control col-md-6"} })
            </div>
        </div>


        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Oluştur" class="btn btn-default" />
            </div>
        </div>
    </div>
}
<script src="~/Scripts/jquery-3.3.1.js"></script>

<script>
    $(".select-add-placeholder1").prepend("<option value='' disabled selected>Personel Seç</option>");
    $(".select-add-placeholder2").prepend("<option value='' disabled selected>Proje Seç</option>");
</script>
